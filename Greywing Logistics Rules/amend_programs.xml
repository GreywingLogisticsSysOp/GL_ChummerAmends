<chummer xmlns="" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2001/XMLSchema programs.xsd">
  
  <!-- Fixes the AI autosoft so that they work as the autosoft gear do. -->
  <programs>
    <program>
      <name>[Weapon] Melee Autosoft</name>
      <hide />
    </program>
    <!-- End Region -->
    <!-- Region AI Advanced Programs -->
    <program>
      <name>Nyetworking</name>
      <required amendoperation="replace">
        <oneof>
          <program>Smoke and Mirrors</program>
        </oneof>
      </required>
    </program>
    <!-- Possibly change back to needing a targeting autosoft -->
    <program>
      <name>Spotter</name>
      <required amendoperation="replace">
        <oneof>
          <program>Smartsoft</program>
        </oneof>
      </required>
    </program>
    <!-- End Region -->
  </programs>
</chummer>
